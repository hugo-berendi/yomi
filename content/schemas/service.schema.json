{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/hugo-berendi/yomi/schemas/service.json",
  "title": "Service",
  "description": "A service running in the homelab",
  "type": "object",
  "required": ["name", "description", "category"],
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the service",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "A brief description of what the service does",
      "minLength": 1
    },
    "url": {
      "type": "string",
      "description": "URL to the service's homepage or repository",
      "format": "uri"
    },
    "category": {
      "type": "string",
      "description": "The category this service belongs to",
      "enum": [
        "budgeting",
        "rss",
        "git-forge",
        "monitoring",
        "remote-access",
        "homepage",
        "gtd",
        "media",
        "notebook",
        "sharing",
        "irc",
        "calendar",
        "reddit-client",
        "youtube-client",
        "self-management",
        "sync",
        "password-manager",
        "search-engine",
        "library",
        "torrent",
        "authentication",
        "ai",
        "automation",
        "other"
      ]
    },
    "enabled": {
      "type": "boolean",
      "description": "Whether the service is currently active",
      "default": true
    },
    "notes": {
      "type": "string",
      "description": "Additional notes about the service"
    }
  }
}
